@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Page</title>
    <style>
        body {
            background-color: #3C4F77;
        }

        .showUser {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 10px;
            background-color: #ffffff;
            color: brown;
        }
    </style>
</head>
<body>
    <div class="showUser">
        <div>Username : @(HttpContextAccessor.HttpContext.Session.GetString("userName"))</div>
        <div>Email : @(HttpContextAccessor.HttpContext.Session.GetString("userEmail"))</div>
    </div>
</body>
</html>